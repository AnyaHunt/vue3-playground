{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "es2015",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "paths": {
            "@/*": [ "./src/*" ],
        },
        "lib": [
            "DOM",
            "ES2020"
        ]
    },
    "include": [
        "src/**/*",
        "typings/**/*.ts"
    ]
}